<div class="container p-0">
  <div class="row justify-content-left">
    <h1 class="p-0"><%= @list.name %></h1>
    <% @movies.each do |movie| %>
      <div class="card border rounded bg-light" style="width: 18rem;">
        <div class="card-body bg-light col-12 col-lg-6 d-flex align-content-between flex-wrap">
          <!-- This div is centered and takes 6 columns -->
          <h5><%= movie.title %></h5>
        </div>
      </div>
    <% end %>
    <%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: "btn btn-dark"%>
    <%= link_to 'Back to index', root_path, class: "btn btn-dark " %>
  </div>
</div>
